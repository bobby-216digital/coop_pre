<div class="">
  <div class="absolute top-0 left-0 w-full h-full mt-70 md:mt-0 -z-10">
    <div class="w-full h-full aspect-w-4 aspect-h-3">
      <img class="object-cover" src="{{ 'pillow-protectors.jpg' | asset_url }}" alt="">
    </div>
  </div>
  <div class="pt-100 pb-30 px-30 md:px-0">
    <div class="block md:w-1/3 m-auto p-30 md:p-40 text-center bg-white">
      {% form 'reset_customer_password' %}
        <h2 class="h4 mb-30">{{ 'customer.reset_password.title' | t }}</h2>
        <p class="p3 mb-20">{{ 'customer.reset_password.subtext' | t: email: email }}</p>
        {%- if form.errors -%}
          <div class="p3 mb-20">
            {{ form.errors | default_errors }}
          </div>
        {%- endif -%}
        <div>
          <input type="password" name="customer[password]" id="ResetPassword" class="h-55 p3 w-full mb-20 px-30 py-17 bg-secondary-100 rounded-full placeholder-black {% if form.errors contains 'password' %}border border-red{% endif %}"   placeholder="Password">
        </div>
        <div>
          <input type="password" name="customer[password_confirmation]" id="PasswordConfirmation" class="h-55 p3 w-full mb-20 px-30 py-17 bg-secondary-100 rounded-full placeholder-black {% if form.errors contains 'password_confirmation' %}border border-red{% endif %}" placeholder="Password Confirmation">
        </div>
        <input type="submit" class="btn-primary btn-md h-55 w-full mb-10 cursor-pointer" value="{{ 'customer.reset_password.submit' | t }}">
      {% endform %}
    </div>
  </div>
</div>
