{% assign video_hero = false %}
{% if collection.metafields.accentuate.hero_collection_video != blank %}
  {% assign video_hero = true %}
{% endif %}

<section class="collection relative w-full flex flex-wrap flex-col-reverse md:flex-row mb-40 md:mb-0 pt-100 {% if video_hero %}md:h-auto lg:pt-115{% else %}md:pt-0{% endif %}">
  <div class="relative container flex items-center w-full z-10 {% if video_hero %}md:w-1/2 md:py-25 md:justify-center md:h-auto{% else %}md:h-full{% endif %}">
    <div id="ghero__index--text" class="w-full {% if video_hero %}md:w-2/3{% else %}md:w-1/2{% endif %}">
      {% if collection.metafields.accentuate.hero_collection_svg %}
        {% for image in collection.metafields.accentuate.hero_collection_svg %}
          <img class="collection__hero-svg transform translate-x-0 md:translate-x-40" src="{{ image.src }}" alt="">
        {% endfor %}
      {% endif %}
      <h1 class="h1 mb-20 md:mb-30">{{ collection.title }}</h1>
      <div class="p1">{{ collection.description }}</div>
    </div>
  </div>
  {% if video_hero %}
    <div class="collection__video pb-25 md:pb-0 md:w-1/2 relative">
      <video class="hero__video w-full object-cover object-center h-full" src="{{ collection.metafields.accentuate.hero_collection_video }}" playsinline js-collection-video></video>
      <button class="hero__video-btn absolute top-1/2 left-1/2 flex items-center py-12 pr-20 bg-primary-100 rounded-full whitespace-nowrap" js-collection-video-btn style="transform: translate(-50%, -50%);">
        <span class="flex-1 text-center px-30 p2 tracking-wider">PLAY VIDEO</span><span class="w-30">{% render 'icons', icon: 'play2' %}</span>
      </button>
    </div>
  {% else %}
    <div id="ghero__index--image" class="collection__img relative md:absolute md:top-120 md:right-0 -mb-30 md:mb-0 pl-20 md:pl-0 transform md:-translate-y-10">
      <figure class="aspect-w-4 aspect-h-3 rounded-l-full overflow-hidden">
        {%
        render 'lazy-image',
        type: 'color',
        image_base: collection.image.src
        sizes: '50vw',
        srcs: '725x,1450x'
        %}
      </figure>
    </div>
  {% endif %}
</section>