<div id="edit_address_{{ address.id }}" data-address-edit-form style="display: none;">
  {% form 'customer_address', address %}

  <div id="AddressEditForm" class="address-edit-form p-20 md:p-40 text-center bg-white">
    <div class="grid md:grid-cols-2 md:gap-1 mb-20">
      <input class="mb-20 md:mb-0" type="text" id="AddressFirstNameNew" name="address[first_name]" value="{{ form.first_name }}"
        placeholder="{{ 'customer.addresses.first_name' | t }}">
      <input type="text" id="AddressLastNameNew" name="address[last_name]" value="{{ form.last_name }}"
        placeholder="{{ 'customer.addresses.last_name' | t }}">
    </div>
    <div class="grid md:grid-cols-2 md:gap-1 mb-20">
      <input class="mb-20 md:mb-0" type="text" id="AddressCompanyNew" name="address[company]" value="{{ form.company }}"
        placeholder="{{ 'customer.addresses.company' | t }}">
      <input type="text" id="AddressAddress1New" name="address[address1]" value="{{ form.address1 }}"
        placeholder="{{ 'customer.addresses.address1' | t }}">
    </div>
    <div>
      <input class="p3 w-full mb-20 px-30 py-17 bg-secondary-100 rounded-full placeholder-black" type="text"
        id="AddressAddress2New" name="address[address2]" value="{{ form.address2 }}"
        placeholder="{{ 'customer.addresses.address2' | t }}">
    </div>
    <div>
      <input class="p3 w-full mb-20 px-30 py-17 bg-secondary-100 rounded-full placeholder-black" type="text"
        id="AddressCityNew" name="address[city]" value="{{ form.city }}"
        placeholder="{{ 'customer.addresses.city' | t }}">
    </div>
    <div class="grid md:grid-cols-2 md:gap-1 mb-20">
      <div class="mb-20 md:mb-0">
        <select class="bg-secondary-100 placeholder-black"
          id="address_country_{{address.id}}" name="address[country]" data-default="{{ form.country }}">{{
          country_option_tags }}</select>
      </div>
      <div id="address_province_container_{{address.id}}">
        <select class="bg-secondary-100 placeholder-black" id="address_province_{{address.id}}" name="address[province]" data-default="{{ form.province }}"></select>
      </div>
    </div>
    <div class="grid md:grid-cols-2 md:gap-1 mb-20">
      <input class="mb-20 md:mb-0" type="text" id="AddressZipNew" name="address[zip]" value="{{ form.zip }}" autocapitalize="characters"
        placeholder="{{ 'customer.addresses.zip' | t }}">
      <input type="tel" id="AddressPhoneNew" name="address[phone]" value="{{ form.phone }}" autocomplete="phone"
        placeholder="{{ 'customer.addresses.phone' | t }}">
    </div>
    <div class="mb-50 text-left">
      <span class="label-check">
        {{ form.set_as_default_checkbox }}
        <label class="p3 cursor-pointer underline" for="address_default_address_{{ form.id }}">{{ 'customer.addresses.set_default' | t }}</label>
      </span>
    </div>
    <div class="grid md:grid-cols-2 gap-2">
      <input class="btn-primary btn-md w-full cursor-pointer" type="submit" value="confirm" />
      <button type="button" class="btn-secondary btn-md w-full cursor-pointer address-new-toggle"
      data-close-edit-address>{{ 'customer.addresses.cancel' | t }}</button>
    </div>
  </div>
  {% endform %}
</div>