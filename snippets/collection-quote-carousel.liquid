{% assign quotes = collection.metafields.accentuate.quote %}
{%- comment -%}
  Minimum 3 Quotes COOP-8 / COOP-20
{%- endcomment -%}
{% if collection.metafields.accentuate.quote %}
  {% unless quotes.size < 3 %}
    <section class="container pb-80 md:pb-100">
      <div class="relative md:w-3/4 md:pl-175 md:ml-15">
        <div class="carousel swiper-container testimonial-carousel mb-50">
          <div class="swiper-wrapper">
            {% for quote in quotes limit: 6 %}
            <!-- Item -->
              <li class="swiper-slide" aria-hidden="false">
                <div class="prose max-w-full pl-20 border-l-5 border-primary-100">
                  <blockquote class="border-none">
                    <div class="quote-lg font-roslinda font-light not-italic border-transparent mb-40 line-clamp-4">
                      {{ quote.html }}
                    </div>
                    <span class="p4 block text-black not-italic">{{ collection.metafields.accentuate.attribution[forloop.index0]  }} </span>
                  </blockquote>
                </div>
              </li>
            {% endfor %}
          </div>
        </div>
        <!-- navigation buttons -->
        <div class="testimonial-carousel-btn relative flex flex-row justify-between lg:justify-start w-start lg:p-0 z-10">
          <button title="Previous Button" type="button" class="swiper-button-prev flex justify-center items-center md:w-27 md:h-15">{% render 'icons', icon: 'arrow-prev' %}</button>
          <div class="fraction-pagination font-sansRegular label-md flex items-center w-auto mx-20"></div>
          <button title="Next Button" type="button" class="swiper-button-next flex justify-center items-center md:w-27 md:h-15">{% render 'icons', icon: 'arrow-next' %}</button>
        </div>
      </div>
    </section>
  {% endunless %}
{% endif %}