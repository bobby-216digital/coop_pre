{% schema %}
  {
    "settings": [
      {
        "type": "header",
        "content": "Hero Module Content"
      },
      {
        "id": "title",
        "type": "text",
        "label": "Title",
        "default": "Sleep Well,<br>Wake Up Weller."
      },
      {
        "id": "smaller_font",
        "type": "checkbox",
        "label": "Smaller Title"
      },
      {
        "id": "subtitle",
        "type": "text",
        "label": "Subtitle",
        "default": "Weâ€™re here to help you get consistently great nights of sleep with an innovative personalized approach to comfort."
      },
      {
        "id": "cta_text",
        "type": "text",
        "label": "CTA Button Text",
        "default": "SHOP PILLOWS"
      },
      {
        "id": "cta_link",
        "type": "url",
        "label": "CTA Button Link"
      },
	  {
        "id": "consumer",
        "type": "checkbox",
        "label": "Show consumer badge"
      },
      {
        "id": "img_swirled",
        "type": "text",
        "label": "Swirled Text Image",
        "info": "Upload the SVG [here](/admin/settings/files) and then copy paste the URL here."
      },
      {
        "type": "image_picker",
        "id": "img_hero_mobile",
        "label": "Hero Image (Mobile)"
      },
      {
        "type": "image_picker",
        "id": "img_hero_desktop",
        "label": "Hero Image (Desktop)"
      },
      {
        "type": "header",
        "content": "Hero Module Layout"
      },
      {
        "id": "layout",
        "type": "select",
        "label": "Hero Module Alignment",
        "options": [
          {
            "value": "left",
            "label": "Left Aligned"
          },
          {
            "value": "center",
            "label": "Center Aligned"
          }
        ],
        "default": "left",
        "info": "Select layout for Hero Module"
      },
      {
        "id": "img_mask",
        "type": "checkbox",
        "label": "Mask Hero Module Image?",
        "default": true,
        "info": "Only applied when Left Aligned is selected"
      },
      {
        "id": "text_color",
        "type": "select",
        "label": "Hero Module Text Color",
        "options": [
          {
            "value": "black",
            "label": "Black"
          },
          {
            "value": "white",
            "label": "White"
          }
        ],
        "default": "black",
        "info": "Select text color for Hero Module"
      }
    ],
    "presets": [
      {
        "category": "WS - Modules",
        "name": "Homepage Hero"
      }
    ]
  }
{% endschema %}
