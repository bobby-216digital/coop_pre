{% style %}
  .checkout-icons__icon-block {
    display: grid;
    align-items: center;
    grid-template-columns: repeat(10, 1fr);
    margin-bottom: 1rem;
  }

  .checkout-icons__icon {
    grid-column-start: span 1;
    width: 60px;
    min-width: 60px;
  }

  .checkout-icons__copy {
    grid-column-start: span 9; 
    padding-left: 1rem;
    font-size: 0.875rem;
    line-height: 1.25rem
  }

  .order-summary__sections {
    height: auto;
  }

  .truck__circle,
  .sun__circle,
  .icon__circle {
    fill: #f4fe55;
  }


{% endstyle %}

