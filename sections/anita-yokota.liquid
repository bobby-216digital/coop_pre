        "info": "Only applied when Left Aligned is selected"
      },
      {
        "id": "text_color",
        "type": "select",
        "label": "Hero Module Text Color",
        "options": [
          {
            "value": "black",
            "label": "Black"
          },
          {
            "value": "white",
            "label": "White"
          }
        ],
        "default": "black",
        "info": "Select text color for Hero Module"
      },
      {
        "type": "header",
        "content": "Hovering Image"
      },
      {
        "type": "image_picker",
        "id": "hover_image",
        "label": "Hover Image"
      },
      {
        "type": "header",
        "content": "Middle Section"
      },
      {
        "type": "image_picker",
        "id": "anita_img_1",
        "label": "Anita Img 1"
      },
      {
        "type": "text",
        "id": "anita_title",
        "label": "Anita Title"
      },
      {
        "type": "text",
        "id": "anita_subtitle_1",
        "label": "Anita subtitle"
      },
      {
        "type": "textarea",
        "id": "anita_content_1",
        "label": "Anita Content Top"
      },
      {
        "type": "text",
        "id": "anita_subtitle_2",
        "label": "Anita subtitle Bottom"
      },
      {
        "type": "textarea",
        "id": "anita_content_2",
        "label": "Anita Content Bottom"
      },
      {
        "type": "image_picker",
        "id": "anita_triple_img",
        "label": "Anita Triple Image"
      },
      {
        "type": "image_picker",
        "id": "anita_img_2",
        "label": "Anita Image 2"
      },
      {
        "type": "header",
        "content": "Collection"
      },
      {
        "type": "text",
        "id": "collection_title",
        "label": "Collection Title"
      },
      {
        "type": "collection",
        "id": "anita_collection",
        "label": "Choose a Collection"
      }
    ]
  }
{% endschema %}
