<section class="quotes-banner w-full">
  <div class="carousel swiper-container quotes-banner-carousel pt-50 lg:pt-65">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        <div class="swiper-slide quotes-banner__slide pt-100 px-25" aria-hidden="false">
          <div class="quotes-banner__slide-wrapper relative mx-auto" style="max-width: 165px;">
            <div class="quotes-banner__slide-quote-tooltip">
              {% if block.settings.quote_url != blank %}
                <a href="{{ block.settings.quote_url }}" target="_blank" class="quotes-banner__slide-quote block text-center italic h6 bg-white rounded-3xl p-15 text-xl md:text-2xl xxl:text-4xl">
              {% else %}
                <div class="quotes-banner__slide-quote text-center italic h6 bg-white rounded-3xl p-15 text-xl md:text-2xl xl:text-4xl">
              {% endif %}
                  {{ block.settings.quote }}
              {% if block.settings.quote_url != blank %}
                </a>
              {% else %}
                </div>
              {% endif %}
            </div>
            <div class="quotes-banner__slide-author flex items-center justify-center">
              <img src="{{ block.settings.author_image | img_url: '500x'}}" alt="{{block.settings.author_image.alt}}" class="quotes-banner__slide-author-img">
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
  {
    "settings": [
    ],
    "blocks": [
      {
        "name": "Quote",
        "type": "quote",
        "settings": [
          {
            "type": "textarea",
            "id": "quote",
            "label": "Quote"
          },
          {
            "type": "image_picker",
            "id": "author_image",
            "label": "Author Image",
            "info": "1:1 aspect ratio image"
          },
          {
            "type": "url",
            "id": "quote_url",
            "label": "Quote URL"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Quotes Banner"
      }
    ]
  }
{% endschema %}
