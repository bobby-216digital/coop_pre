<div class="returns__introduction text-center">
    {% if section.settings.main_title != blank %}
    <h1 class="returns__main-title h1 mb-40 md:mb-80">{{ section.settings.main_title }}</h1>
    {% endif %}
    {% if section.settings.main_content != blank%}
    <p class="returns__introduction-content text-xl mx-auto px-20 pb-60  max-w-5xl md:pb-100">
        {{ section.settings.main_content }}
    </p>
    {% endif %}
</div>

<div class="returns__sections-container px-20 ">
    {% for block in section.blocks %}
        {% if block.type == 'full_width' %}
            
            <div class="returns__full-width text-center py-30 md:py-50">
                <div class="returns__full-width-inner text-center py-40 px-40 bg-secondary-200 mx-auto max-w-5xl">
                    {% if block.settings.block_title != blank %}
                        <h2 class="returns__block-title h4 leading-none"> {{ block.settings.block_title }} </h2>
                    {% endif %}
                    {% if block.settings.block_icon != blank %}
                        <div class="returns__icon flex align-middle justify-center">
                            <img class="" src="{{  block.settings.block_icon | img_url: '200x'  }}" alt="" />
                        </div>
                    {% endif %}
                    {% if block.settings.returns_content != blank %}
                        <p class="returns__content text-xl mb-50 block {% if block.settings.left_align == true %}text-left{% else %}text-center{% endif %}"> {{ block.settings.returns_content }} </p>
                    {% endif %}
                    {% if block.settings.link_url != blank %}
                        <a href="{{ block.settings.link_url }}" class="returns__link text-xl underline font-bold block "> {{ block.settings.link_content }} </a>
                    {% endif %}
                    {% if block.settings.returns_extra_condition != blank %}
                        <p class="returns__content text-xl"> {{ block.settings.returns_extra_condition }} </p>
                    {% endif %}
                </div>
            </div>
            {% if block.settings.extra_side_note != blank %}
            <p class="text-lg text-center">{{ block.settings.extra_side_note }}</p>
            {% endif %}
        {% elsif block.type == 'two_section' %}
