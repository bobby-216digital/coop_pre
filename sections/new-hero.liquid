<section class="carousel swiper-container hero-slider" data-section-type="new-slider-section">
    <div class="hero-slider__slider-container swiper-wrapper" js-new-hero-slider>
        {% for block in section.blocks %}

            <div class="hero-slider__slide swiper-slide" aria-hidden="false">
                {% if block.settings.cta_link != blank %}
                <a href="{{ block.settings.cta_link }}">
                    <div class="{% if settings.enable_announcement_bar == true %}margin-top--banner-detected{% else %}mt-70{% endif %} pb-0 flex flex-col relative md:flex-row md:pb-0 md:items-center" data-animate-scale>
                        <div id="ghero__index--image" class="mr-0 flex-auto md:order-2 md:ml-0 md:w-725 lazy--flex overflow-hidden" data-img-scale>
                        {%
                            render 'lazy-image',
                            type: 'color',
                            image_base: block.settings.img_hero_desktop,
                            image_mobile: block.settings.img_hero_mobile,
                            srcs: '959x,960x,1450x,1920x',
                        %}
                        </div>
                    </div>
                </a>
                {% else %}
                <div class="{% if settings.enable_announcement_bar == true %}margin-top--banner-detected{% else %}mt-70{% endif %} pt-0 pb-0 flex flex-col relative md:flex-row md:pb-0 md:items-center" data-animate-scale>
                    <div id="ghero__index--image" class="ml-0 mr-0 flex-auto md:order-2 md:ml-0 md:w-725 lazy--flex overflow-hidden" data-img-scale>
                    {%
                        render 'lazy-image',
                        type: 'color',
                        image_base: block.settings.img_hero_desktop,
                        image_mobile: block.settings.img_hero_mobile,
                        srcs: '959x,960x,1450x,1920x',
                    %}
                    </div>
                </div>
                {% endif %}
            </div>
        {% endfor %}
    </div>
    <div class="slider__pagination flex justify-center w-full py-20">
        <div class="relative flex flex-row justify-between lg:justify-center w-full px-20 col-span-2 order-3">
            <button title="Previous Button" type="button" class="swiper-button-prev flex justify-center items-center md:w-27 md:h-15">{% render 'icons', icon: 'arrow-prev' %}</button>
            <div class="fraction-pagination font-sansRegular label-md flex items-center w-auto mx-20"></div>
            <button title="Next Button" type="button" class="swiper-button-next flex justify-center items-center md:w-27 md:h-15">{% render 'icons', icon: 'arrow-next' %}</button>
        </div>
    </div>
</section>
{% schema %}
  {
    "settings": [

    ],
    "blocks":[
        {
            "type": "slide",
            "name": "Slide",
            "settings": [
            {
                "type": "header",
                "content": "Hero Module Content"
              },
              {
                "id": "cta_link",
                "type": "url",
                "label": "CTA Button Link"
              },
              {
                "type": "image_picker",
                "id": "img_hero_mobile",
                "label": "Hero Image (Mobile)"
              },
              {
                "type": "image_picker",
                "id": "img_hero_desktop",
                "label": "Hero Image (Desktop)"
              }
            ]
        }
    ],
    "presets": [
      {
        "category": "WS - Modules",
        "name": "Homepage Hero Slider"
      }
    ]
  }
{% endschema %}
